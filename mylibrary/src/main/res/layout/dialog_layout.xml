<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size45"
        android:layout_marginRight="@dimen/layout_size45"
        android:background="@drawable/dialog_normal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_size25"
                android:layout_marginLeft="@dimen/layout_size25"
                android:layout_marginRight="@dimen/layout_size25"
                android:text="信息"
                android:textColor="#1A1A1A"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1sp"
                android:layout_marginTop="@dimen/layout_size25"
                android:background="#D2D2DA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size43"
                android:layout_weight="1"
                android:background="@drawable/dialog_left_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#1A1A1A"
                android:textSize="14sp"/>

            <View
                android:layout_width="0.1sp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#D2D2DA" />

            <TextView
                android:id="@+id/down"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size43"
                android:layout_weight="1"
                android:background="@drawable/dialog_right_selector"
                android:gravity="center"
                android:text="确认"
                android:textColor="#0080FC"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>