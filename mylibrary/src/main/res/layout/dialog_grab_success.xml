<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size45"
        android:layout_marginRight="@dimen/layout_size45"
        android:background="@drawable/dialog_grab_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_grab_success"/>

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_size25"
                android:layout_marginLeft="@dimen/layout_size25"
                android:layout_marginRight="@dimen/layout_size25"
                android:text="信息"
                android:textColor="#1A1A1A"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_size25"
                android:layout_marginBottom="@dimen/layout_size25"
                android:lineSpacingExtra="6dp"
                android:text="详细内容"
                android:textColor="#1A1A1A"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size43"
                android:layout_weight="1"
                android:background="#F8F8FA"
                android:gravity="center"
                android:text="取消"
                android:textColor="#1A1A1A"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/down"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size43"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_theme_rectangle"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>